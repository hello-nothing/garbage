/**index.wxss**/
.top-tips {
  height: 40px;
  line-height: 40px;
  text-align: center;
  font-size: 16px;
}
.search {
  padding: 0 20px;
  margin-bottom: 30px;
}
.search-content {
  padding: 6px 10px;
  color: #74787c;
  border: 1px solid #7fb80e;
  border-radius: 10px;
}
.search-text {
  padding-left: 10px;
}
.type-content {
  display: flex;
  padding: 0 30px;
  padding-bottom: 10px;
  justify-content: space-between;
}
.type-image {
  width: 100px;
  height: 100px;
  background-position: center;
  background-size: cover;
  background-repeat: no-repeat;
  border-radius: 10px;
}
.report {
  padding: 0 30px;
  padding-bottom: 10px;
  font-size: 14px;
  color: #74787c;
}
.icon-style {
  color: #f15a22;
}
.tip-text {
  padding-left: 10px;
}
.icon-size {
  font-size: 16px;
}
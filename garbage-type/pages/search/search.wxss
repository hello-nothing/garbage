/* pages/search/search.wxss */

page {
  padding-top: 20px;
}

.container {
  padding: 0 10px;
}

.search {
  padding: 0 20px;
  margin-bottom: 30px;
}

.search-content {
  position: relative;
  display: flex;
  width: calc(100% - 20px);
  padding: 6px 10px;
  margin-bottom: 15px;
  color: #74787c;
  border: 1px solid #7fb80e;
  border-radius: 10px;
}

.search-text {
  width: calc(100% - 100px);
  padding-left: 10px;
}

.icon-size {
  margin-top: 2px;
  font-size: 18px;
}

.button {
  position: absolute;
  top: -0.6px;
  right: 0;
  width: 60px;
  line-height: 35px;
  font-size: 14px;
  text-align: center;
  color: #fff;
  background-color: #7fb80e;
  border-top-right-radius: 10px;
  border-bottom-right-radius: 10px;
}

.result-content {
  width: calc(100% - 8px);
}

.result-list {
  position: relative;
  padding: 5px 8px;
  margin-bottom: 10px;
  border-radius: 8px;
  box-shadow: 0 2px 5px 1px rgba(0, 0, 0, 0.1);
}

.title {
  width: calc(100% - 8px);
  font-size: 14px;
  color: #666;
}

.type {
  width: calc(100% - 8px);
  font-size: 14px;
  color: #7fb80e;
}

.link-incon {
  position: absolute;
  top: 16px;
  right: 10px;
}
